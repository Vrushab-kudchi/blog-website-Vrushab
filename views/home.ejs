<%- include("partials/header"); -%>

    <h1>Home</h1>
    <p>
        <%= homeData %>
    </p>


    <% blogdata.forEach(function(element) { %>
        <h1>
            <%=element.title %>
        </h1>
        <p>
            <%=element.content.substring(0,140) + "..." %>

                <a href="/post/<%= element.title %> ">read more</a>
                <form action="/delete" method="post">
                    <button class="btn btn-danger" name="id" type="submit" value="<%= element.id %>">Delete</button>
                </form>
        </p>

        <% }); %>

            <%- include("partials/footer"); -%>
